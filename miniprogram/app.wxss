/* 全局样式 */
.container {
  padding: 20px;
}

.info-list {
  margin-bottom: 20px;
}

.info-item {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 10px;
}

textarea {
  width: 100%;
  height: 200px;
  border: 1px solid #ddd;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 20px;
}

button {
  display: block;
  width: 100%;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  text-align: center;
  border: none;
  border-radius: 5px;
  margin-top: 10px;
}
